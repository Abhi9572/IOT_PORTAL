<%- include('header.ejs', {title: 'Dashboard', userImg:
'/image/house.png',currentPage:'dashboard'}) %>

<!-- Details -->
<div class="container-fluid pt-4 px-4">
  <div class="row g-4">
    <div class="col-sm-6 col-xl-3 m-auto my-3">
      <div
        class="bg-light rounded d-flex align-items-center justify-content-between p-4"
      >
        <i class="fa fa-chart-pie fa-3x text-primary"></i>
        <div class="ms-3">
          <p class="mb-2">Total Number of Devices</p>
          <h6 class="mb-0"><%= count %></h6>
        </div>
      </div>
    </div>
  </div>
  <div class="row g-4 mt-4">
    <div class="col-sm-6 col-xl-9 m-auto">
      <div class="bg-light rounded h-100 p-4 text-center">
        <h6 class="mb-4">User Details</h6>
        <div class="">
          <div class="testimonial-item text-center">
            <img
              class="img-fluid rounded-circle mx-auto mb-4"
              src="/image/house.png"
              style="width: 100px; height: 100px"
            />

            <h5 class="mb-1">Username: @<%= user.username %></h5>

            <p class="mb-0">UserId: <%= user._id %></p>
            <p class="mb-0">EmailID: <%= user.email %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('footer.ejs') %>
