<%- include('header.ejs', {title: 'EditDevice', userImg: '/image/iot_5.png',
currentPage:'devicelist'}) %>

<!-- Sign In Start -->
<div class="container-fluid">
  <div
    class="row h-100 align-items-center justify-content-center"
    style="min-height: 100vh"
  >
    <div class="col-12 col-sm-8 col-md-6 col-lg-5 col-xl-4">
      <div class="bg-light rounded p-4 p-sm-5 my-4 mx-3">
        <div class="d-flex align-items-center justify-content-between mb-3">
          <h3>Update Your Device</h3>
        </div>

        <% if(error.length > 0) { %>
        <p class="error"><%= error %></p>
        <% } %>
        <form action="/editDevice/<%= device._id %>/update" method="post">
          <div class="form-floating mb-4">
            <input
              type="text"
              name="deviceName"
              class="form-control"
              id="deviceName"
              value="<%= device.deviceName %>"
              placeholder="DeviceName"
              required="true"
            />
            <label for="deviceName">DeviceName</label>
          </div>
          <input
            type="submit"
            class="btn btn-primary py-3 w-100 mb-4"
            value="Update Device"
          />
        </form>
      </div>
    </div>
  </div>
</div>

<%- include('footer.ejs') %>
